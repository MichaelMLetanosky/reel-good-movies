<nav class="level profile-info">
    <div class="level-item has-text-centered">
        <div>
            <p class="heading">Username:</p>
                <p class="title">{{username}}</p>
        </div>
    </div>
    <div class="level-item has-text-centered">
        <div>
            <p class="heading">Number of Movies in our list</p>
                <p class="title">{{movies.length}}</p>
        </div>
    </div>
    <div class="level-item has-text-centered">
        <div>
            <p class="heading">Follows</p>
            {{#each followee as |follow|}}
                <p class="title">{{username}}</p>
            {{/each}}
        </div>
    </div>
</nav>

<section class="profile-lists">
    <h3>Favorites List</h3>
    <div class="movie-profile-list">
        <section class="movie-results">
            <div class="movie-thumbnail">
                {{#each movies as |wantToWatch|}}
                <div class="favorite-movies">
                    <h2>{{movie_title}}</h2>
                    <img src="{{movie_poster}}" class="img-small-poster" alt="similar movies" />
                </div>
                {{/each}}
            </div>
        </section>
    </div>
</section>

<div class="container">
    <section class="review-half-div">
    <div class="movie-review">
        <h1 class="movie-header-text">User Reviews</h1>
        <hr />
        <!-- page review -->
        <div class="card max-card">
            <div class="card-content-main">
                <div class="content">
                    <div class="review-info-div">
                        {{#each reviews as |review|}}
                            {{> review-details}}
                            
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
</section>
   
</div>

